ThreadWeb.java




import java.awt.Color;
import java.io.IOException;
import java.net.URL;
import java.net.URLConnection;
import java.util.List;
import java.util.Map;
import java.util.logging.Level;
import java.util.logging.Logger;
import javax.swing.JEditorPane;
import javax.swing.JTextField;
import javax.swing.JTextPane;
import javax.swing.text.BadLocationException;
import javax.swing.text.SimpleAttributeSet;
import javax.swing.text.StyleConstants;
import javax.swing.text.StyledDocument;

/*
 * To change this license header, choose License Headers in Project Properties.
 * To change this template file, choose Tools | Templates
 * and open the template in the editor.
 */

/**
 *
 * @author Ked
 */
public class ThreadWeb extends Thread{
    private JTextField url;
    private JEditorPane webpage;
    private JTextPane statusThread;
    private JTextPane showHeader;
    private String threadName;
    StyledDocument docThread ;
            

    public ThreadWeb(JTextField url, JEditorPane webpage, JTextPane statusThread, JTextPane showHeader,String threadName) {
        
        try {
                this.url = url;
                this.webpage = webpage;
                this.statusThread = statusThread;
                this.showHeader = showHeader;
                this.threadName = threadName;
                
                SimpleAttributeSet keyWord = new SimpleAttributeSet();
                StyleConstants.setForeground(keyWord, Color.RED);
                StyleConstants.setBackground(keyWord, Color.YELLOW);
                StyleConstants.setBold(keyWord, true);
                docThread = statusThread.getStyledDocument();
                docThread.insertString(0, "Start " +  threadName+"\n", null );
       } catch (BadLocationException ex) {
           Logger.getLogger(ThreadWeb.class.getName()).log(Level.SEVERE, null, ex);
       }
    }

    public ThreadWeb() {
    }

    public  void getHeader() {
         
           StyledDocument docHeader = showHeader.getStyledDocument();
           SimpleAttributeSet keyWord = new SimpleAttributeSet();
           StyleConstants.setForeground(keyWord, Color.RED);
           StyleConstants.setBackground(keyWord, Color.YELLOW);
           StyleConstants.setBold(keyWord, true);
           
         URL obj = null;
    try {

        obj = new URL(url.getText());
	URLConnection conn = obj.openConnection();
	Map<String, List<String>> map = conn.getHeaderFields();
 
        docHeader.insertString(0, "Printing Response Header...\n", null );
	//System.out.println("Printing Response Header...\n");
 
	for (Map.Entry<String, List<String>> entry : map.entrySet()) {
            docHeader.insertString(0, "Key : " + entry.getKey() 
                           + " ,Value : " + entry.getValue()+"\n", null );
		//System.out.println("Key : " + entry.getKey() 
                 //          + " ,Value : " + entry.getValue());
	}
        
        docHeader.insertString(0, "\nGet Response Header By Key ...\n", null );
	//System.out.println("\nGet Response Header By Key ...\n");
	String server = conn.getHeaderField("Server");
 
	if (server == null) {
                docHeader.insertString(0, "Key 'Server' is not found!", null );
		//System.out.println("Key 'Server' is not found!");
	} else {
                docHeader.insertString(0, "Server - " + server, null );
		//System.out.println("Server - " + server);
	}
        docHeader.insertString(0,"\n Done", null );
	//System.out.println("\n Done");
 
    } catch (Exception e) {
	e.printStackTrace();
    }
 
  }
    @Override
    public void run() {
         //To change body of generated methods, choose Tools | Templates.
        try {
           docThread.insertString(0,"\nThread "+ threadName +" : GET URL"+ url +"\n\n", null );
       } catch (BadLocationException ex) {
           Logger.getLogger(ThreadWeb.class.getName()).log(Level.SEVERE, null, ex);
       }
     
      try {
        
            if(threadName.equals("A"))
            {
                //urlStack.push(jTextFieldURL.getText());
                webpage.setPage(url.getText());
                getHeader();
            }
            else
            {
                //urlStack1.push(jTextFieldURL1.getText());
                webpage.setPage(url.getText());
                getHeader();
            }
            docThread.insertString(0,  "Thread "+threadName + " : Terminated\n", null );
     
     } catch (IOException ex) {
           Logger.getLogger(ThreadWeb.class.getName()).log(Level.SEVERE, null, ex);
       } catch (BadLocationException ex) {
           Logger.getLogger(ThreadWeb.class.getName()).log(Level.SEVERE, null, ex);
       }
        
    }
    
}

